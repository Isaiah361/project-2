
<h1>{{theAnime.title}}</h1>

<form action="/{{theAnime.id}}/addReview" method="POST">
  <div class="form-group">
    <label for="exampleFormControlInput1">Rating</label>
    <input name="rating" type="text" class="form-control" id="exampleFormControlInput1" placeholder="1-5">
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Review</label>
    <textarea name="review" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>